---
import "@fontsource-variable/jetbrains-mono";
import "@fontsource-variable/space-grotesk";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="h-full w-full [color-scheme:dark]" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta
      content="noindex, nofollow, noarchive, nosnippet, noimageindex, nocache, notranslate, nositelinkssearchbox, max-image-preview:none"
      name="robots"
    />
    <meta
      content="noindex, nofollow, noarchive, nosnippet, noimageindex, nocache, notranslate, nositelinkssearchbox, max-image-preview:none"
      name="googlebot"
    />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <title>{title}</title>
    <meta content="subtle" name="description" />
  </head>
  <body
    class="flex h-full w-full flex-col items-center justify-center bg-slate-950 text-sky-50 selection:bg-sky-500 selection:text-sky-50"
  >
    <slot />
  </body>
</html>
